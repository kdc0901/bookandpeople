<%- contentFor('body') %>
<div class="main-page">
    <section class="main-page__section">
        <h2 class="main-page__title">오늘의 PICK</h2>
        <div class="main-page__book-grid">
            <% if (typeof todayPicks !== 'undefined' && todayPicks.length > 0) { %>
                <% todayPicks.forEach(function(book) { %>
                    <div class="main-page__book-item">
                        <div class="main-page__book-image">
                            <img src="<%= book.imageUrl %>" alt="<%= book.title %>">
                        </div>
                        <div class="main-page__book-info">
                            <h3 class="main-page__book-title"><%= book.title %></h3>
                            <p class="main-page__book-author"><%= book.author %></p>
                            <p class="main-page__book-published">
                                <%= new Date(book.publishedAt).toLocaleDateString('ko-KR', { 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric' 
                                }) %>
                            </p>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>등록된 책이 없습니다.</p>
            <% } %>
        </div>
    </section>

    <section class="main-page__section">
        <h2 class="main-page__title">지금, 이 책</h2>
        <div class="main-page__book-grid">
            <% if (typeof currentBooks !== 'undefined' && currentBooks.length > 0) { %>
                <% currentBooks.forEach(function(book) { %>
                    <div class="main-page__book-item">
                        <div class="main-page__book-image">
                            <img src="<%= book.imageUrl %>" alt="<%= book.title %>">
                        </div>
                        <div class="main-page__book-info">
                            <h3 class="main-page__book-title"><%= book.title %></h3>
                            <p class="main-page__book-author"><%= book.author %></p>
                            <p class="main-page__book-published">
                                <%= new Date(book.publishedAt).toLocaleDateString('ko-KR', { 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric' 
                                }) %>
                            </p>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>등록된 책이 없습니다.</p>
            <% } %>
        </div>
    </section>
</div> 